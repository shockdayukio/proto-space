.container.user-page
  %header.user-nav
    .media
      .media-left
        =image_tag @user.avatar ,class: "media-object", alt: "64x64", "data-holder-rendered": "true", "data-src": "holder.js/64x64",style: "width: 64px; height: 64px;"
      .media-body
        %h4#top-aligned-media.media-heading
          Top aligned media
          %span.label.label-default.project-number
            = @prototypes_count
            %i Projects
        .proto-user
          %span.degree
            =@user.occupation
        .row
          .col-md-6
            %h4 Profile
            %p
              =@user.profile
          .col-md-6
            %h4 Works
            %p
              =@user.works
.container.proto-list
  .row
    - @prototypes.each do |proto|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          = link_to prototype_path(proto.id) do
            - proto.captured_images.main.each do |main|
              = image_tag main.image
          .caption
            =content_tag :h3, proto.name
            .proto-meta
              .proto-user
                = @user.name
              .proto-posted
                = proto.created_at
            %ul.proto-tag-list.list-inline
              %li
                %a{href: "#", class: "btn btn-default"} iPad
              %li
                %a{href: "#", class: "btn btn-default"} wireframe
